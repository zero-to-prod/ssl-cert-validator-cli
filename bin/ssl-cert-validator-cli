#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Zerotoprod\SslCertValidatorCli\GetCertCommand;
use Zerotoprod\SslCertValidatorCli\SelfSignedCertCommand;
use Zerotoprod\SslCertValidatorCli\SrcCommand;
use Zerotoprod\SslCertValidatorCli\ValidateCertCommand;
use Zerotoprod\SslCertValidatorCli\ValidateHostCommand;

require getcwd().'/vendor/autoload.php';

$application = (new Application());

$application->add(new GetCertCommand());
$application->add(new SelfSignedCertCommand());
$application->add(new SrcCommand());
$application->add(new ValidateCertCommand());
$application->add(new ValidateHostCommand());

$application->run();
#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Zerotoprod\SslCertValidatorCli\HostIsValidCommand;
use Zerotoprod\SslCertValidatorCli\IsValidCommand;
use Zerotoprod\SslCertValidatorCli\SrcCommand;

require getcwd().'/vendor/autoload.php';

$application = (new Application());

$application->add(new SrcCommand());
$application->add(new HostIsValidCommand());
$application->add(new IsValidCommand());

$application->run();